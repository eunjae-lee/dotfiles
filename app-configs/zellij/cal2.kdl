layout {
    // Default template for all tabs - includes Zellij UI
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        children
        pane size=2 borderless=true {
            plugin location="zellij:status-bar"
        }
    }

    // Tab 1: opencode - runs "opencode" command in ~/workspace/cal.com
    tab name="opencode" cwd="~/workspace/cal.com" {
        pane name="opencode" command="sh" {
            args "-c" "opencode upgrade && opencode"
        }
    }

    // Tab 2: git + dev - runs "lazygit" and floating "yarn dev"
    tab name="git + dev" cwd="~/workspace/cal.com" hide_floating_panes=true {
        pane command="lazygit"
        floating_panes {
            pane name="dev" command="sh" {
                x "10%"
                y "10%"
                width "80%"
                height "80%"
                args "-c" "yarn && yarn dev"
            }
        }
    }

    // Tab 3: notes
    tab name="notes" cwd="~/workspace/notes" {
        pane split_direction="horizontal" {
            pane command="lazygit"
            pane name="opencode" command="sh" {
                args "-c" "opencode upgrade && opencode"
            }
        }
    }

    // Tab 4: db reset - runs "cal_reset" suspended
    tab name="db reset" {
        pane command="cal_reset" start_suspended=true
    }
}
