layout {
    // Default template for all tabs - includes Zellij UI
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        children
        pane size=2 borderless=true {
            plugin location="zellij:status-bar"
        }
    }

    // Tab 1: 2x3 grid of panes
    tab name="main" {
        pane split_direction="horizontal" {
            pane split_direction="vertical" {
                pane name="opencode: web" command="sh" {
                    args "-c" "opencode serve"
                }
                pane name="clementine: dev" command="sh" {
                    args "-c" "cd ~/workspace/clementine && bun dev"
                }
            }
            pane split_direction="vertical" {
                pane name="opencode: tailscale" command="sh" {
                    args "-c" "sleep 5; /Applications/Tailscale.app/Contents/MacOS/Tailscale serve --http=4096 http://127.0.0.1:4096"
                }
                pane name="clementine: tailscale" command="sh" {
                    args "-c" "/Applications/Tailscale.app/Contents/MacOS/Tailscale serve --http=3333 http://127.0.0.1:3333"
                }
            }
        }
    }
}
